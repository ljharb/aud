{
	"name": "aud",
	"version": "2.0.5",
	"description": "Use `npx aud` instead of `npm audit`, whether you have a lockfile or not!",
	"bin": "./bin.mjs",
	"exports": {
		"./package.json": "./package.json"
	},
	"scripts": {
		"prepack": "npmignore --auto --commentLines=autogenerated",
		"prepublish": "not-in-publish || npm run prepublishOnly",
		"prepublishOnly": "safe-publish-latest",
		"pretest": "npm run lint",
		"lint": "eslint --ext=js,mjs .",
		"tests-only": "nyc tape 'test/**/*.js'",
		"test": "npm run tests-only",
		"posttest": "./bin.mjs --production",
		"version": "auto-changelog && git add CHANGELOG.md",
		"postversion": "auto-changelog && git add CHANGELOG.md && git commit --no-edit --amend && git tag -f \"v$(node -e \"console.log(require('./package.json').version)\")\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ljharb/aud.git"
	},
	"keywords": [
		"audit",
		"lockfile",
		"shrinkwrap",
		"npm",
		"audit"
	],
	"author": "Jordan Harband <ljharb@gmail.com>",
	"funding": {
		"url": "https://github.com/sponsors/ljharb"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/ljharb/aud/issues"
	},
	"homepage": "https://github.com/ljharb/aud#readme",
	"dependencies": {
		"colors": "=1.4.0",
		"find-package-json": "^1.2.0",
		"libnpx": "^10.2.4",
		"node-cleanup": "^2.1.2",
		"npm-lockfile": "^4.0.0",
		"semver": "^7.6.3",
		"tmp": "^0.2.3"
	},
	"devDependencies": {
		"@ljharb/eslint-config": "^21.1.1",
		"auto-changelog": "^2.4.0",
		"eslint": "=8.8.0",
		"npmignore": "^0.3.1",
		"nyc": "^15.1.0",
		"safe-publish-latest": "^2.0.0",
		"tape": "^5.8.1"
	},
	"engines": {
		"node": ">= 22 || ^20.9 || ^18.12 || ^16.14",
		"npm": ">= 8.5.0"
	},
	"auto-changelog": {
		"output": "CHANGELOG.md",
		"template": "keepachangelog",
		"unreleased": false,
		"commitLimit": false,
		"backfillLimit": false,
		"hideCredit": true
	},
	"publishConfig": {
		"ignore": [
			".github/workflows"
		]
	}
}
